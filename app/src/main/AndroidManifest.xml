<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.alexander_rodriguez.mihogar">
    <uses-feature
        android:name="android.hardware.camera"
        android:required="true" />

    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme"
        android:configChanges="orientation" >
        <activity android:name=".registrarcasa.RegistrarCasaActivity"
            android:theme="@style/AppThemeMaterial.NoActionBar"/>

        <activity android:name=".ViewPdfActivity" />
        <activity
            android:name=".ActivityShowImage"
            android:theme= "@style/ShowPhototheme"/>
        <activity
            android:name="com.theartofdev.edmodo.cropper.CropImageActivity"
            android:theme="@style/Base.Theme.AppCompat" />
        <activity android:name=".VistaPreviaActivity" />
        <activity android:name=".historial_casa.HistorialCasaActivity" />
        <activity android:name=".mi_casa.MiCasaActivity" />
        <activity android:name=".history_user.HistorialUsuarioActivity"
            android:theme="@style/AppTheme.StatusBarTransparent"
            android:label=""/>
        <activity android:name=".table_activity.TableActivity" />

        <activity
            android:name=".vercuarto.ShowRoomActivity"
            android:label=""
            android:configChanges="orientation"
            android:theme="@style/AppTheme.StatusBarTransparent"/>

        <activity
            android:name=".add_room.AgregarCuarto"
            android:windowSoftInputMode="stateAlwaysVisible" />

        <activity android:name=".menu_main.MenuPricipal"/>

        <activity android:name=".mainactivity.MainActivity"
            android:theme="@style/AppTheme.NoActionBar">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <action android:name="android.intent.action.VIEW" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <activity
            android:name=".Preferencias"
            android:configChanges="orientation"
            android:label="@string/title_activity_settings"
            android:theme="@style/Theme.Preferences" />

        <activity android:name=".add_rental.AddRentalActivity"
            android:theme="@style/ThemeAddList"
            android:configChanges="orientation|screenSize"/>

        <provider
            android:name="androidx.core.content.FileProvider"
            android:authorities="com.alexander_rodriguez.mihogar.android.fileprovider"
            android:exported="false"
            android:grantUriPermissions="true">
            <meta-data
                android:name="android.support.FILE_PROVIDER_PATHS"
                android:resource="@xml/file_paths" />
        </provider>
        <meta-data
            android:name="preloaded_fonts"
            android:resource="@array/preloaded_fonts" />

    </application>
</manifest>
