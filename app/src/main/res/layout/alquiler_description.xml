<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_margin="12dp"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    card_view:cardCornerRadius="8dp"
    android:elevation="4dp"
    android:clickable="true"
    android:focusable="true"
    android:layout_gravity="center">
    <TableLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="4dp">
        <TableRow
            >
            <TextView
                android:text="Alquiler: "/>
            <TextView
                android:layout_weight="1"
                android:id="@+id/tvIdAlquiler"
                android:gravity="center"
                android:text="1"/>
        </TableRow>
        <TableRow>
            <TextView
                android:text="Cuarto: "/>
            <TextView
                android:layout_weight="1"
                android:id="@+id/tvNumCuarto"
                android:gravity="center"
                android:text="04"/>
        </TableRow>
        <TableRow>

            <TextView
                android:text="Numero de inquilinos: "/>

            <TextView
                android:id="@+id/tvTenantsNumber"
                android:gravity="center"
                android:layout_weight="1"
                android:text="8"/>
        </TableRow>

        <TableRow>

            <TextView
                android:text="Fecha de ingreso: "/>

            <TextView
                android:id="@+id/tvEntryDate"
                android:gravity="center"
                android:layout_weight="1"
                android:text="12/02/2020"/>
        </TableRow>

        <TableRow>

            <TextView
                android:text="Fecha de salida: "/>

            <TextView
                android:id="@+id/tvDepartureDate"
                android:gravity="center"
                android:layout_weight="1"
                android:text="12/02/2021"/>
        </TableRow>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:gravity="center"
            android:text="@string/sMotSalida"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/tvReason"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:lines="2"
            android:layout_marginBottom="12dp"
            android:gravity="center" />
        <TableRow>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="?attr/actionBarSize"
                android:orientation="horizontal"
                android:layout_weight="1"
                android:gravity="center">
                <Button
                    android:id="@+id/btVerCuarto"
                    style="@style/Widget.AppCompat.Button.Borderless.Colored"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Ver usuarios"/>
                <Button
                    android:id="@+id/btVerPagos"
                    style="@style/Widget.AppCompat.Button.Colored"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Ver pagos"
                    />
            </LinearLayout>
        </TableRow>
    </TableLayout>

</androidx.cardview.widget.CardView>
