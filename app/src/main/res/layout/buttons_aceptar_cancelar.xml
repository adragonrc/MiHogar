<?xml version="1.0" encoding="utf-8"?>
<com.alexander_rodriguez.mihogar.ButtonsAceptarCancelar xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/llBtns"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="4dp"
    android:gravity="center"

    android:layout_alignParentBottom="true"
    android:layout_marginBottom="0dp"
    android:orientation="horizontal">

    <Button
        android:id="@+id/button0"
        style="@style/Widget.AppCompat.Button.Borderless.Colored"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginEnd="10dp"
        android:layout_weight="1"
        android:onClick="onClickTerminarAlquiler"
        android:text="Quitar Alquiler" />

    <Button
        android:id="@+id/button1"
        style="@style/Widget.AppCompat.Button.Colored"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp"
        android:layout_weight="1"
        android:text="PAGAR ALQUILER"/>
</com.alexander_rodriguez.mihogar.ButtonsAceptarCancelar>