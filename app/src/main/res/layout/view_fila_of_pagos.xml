<?xml version="1.0" encoding="utf-8"?>
<com.alexander_rodriguez.mihogar.table_activity.TableRowView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <TextView
        android:id="@+id/tvId"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:text="TextView"
        android:contentDescription="@string/descripcion_id_pago"
        android:gravity="center" />

    <TextView
        android:id="@+id/tvFecha"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:text="TextView"
        android:gravity="center"
        android:contentDescription="@string/descripcion_fecha_pago"/>

    <TextView
        android:id="@+id/tvMonto"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:text="TextView"
        android:contentDescription="Cantidad pagada"
        android:gravity="center"/>
</com.alexander_rodriguez.mihogar.table_activity.TableRowView>